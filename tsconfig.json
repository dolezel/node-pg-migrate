  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["es2017"],
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "dist", "bin"]
}
